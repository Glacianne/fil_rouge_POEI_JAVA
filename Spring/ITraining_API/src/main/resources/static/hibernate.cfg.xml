<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/It_training</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
		
	<mapping class="com.example.itraining_api.entity.UserAccount" />
    <mapping class="com.example.itraining_api.entity.TeacherAccount" />
    <mapping class="com.example.itraining_api.entity.LearnerAccount" />
        <mapping class="com.example.itraining_api.entity.AdministratorAccount" />
    <mapping class="com.example.itraining_api.entity.Session" />
    <mapping class="com.example.itraining_api.entity.Training" />
    </session-factory>
</hibernate-configuration>
